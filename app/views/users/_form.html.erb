<div class="well well-sm">
  <%= simple_form_for @user do |f| %>
  <%= f.input :first_name%>
  <%= f.input :last_name %>
  <%= f.input :email%>
  <%= f.input :password %>
  <%= f.input :password_confirmation, label: 'Confirm Password' %>
  <%= f.submit class: "btn btn-primary btn-sm" %>
  <% end %>
</div>
